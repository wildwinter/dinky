{
    "name": "dinky",
    "productName": "Dinky",
    "version": "0.0.7",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "start": "npm run dev",
        "build": "check-node-version --node \">=22.12\" && vite build",
        "clean": "rm -rf dist dist-electron release",
        "preview": "npm run build && electron .",
        "dist-mac": "npm run clean && npm run build && electron-builder --mac",
        "dist-win": "npm run clean && npm run build && electron-builder --win --x64"
    },
    "build": {
        "appId": "net.wildwinter.dinky",
        "productName": "Dinky",
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "build/DinkyApp.icns"
        },
        "files": [
            "dist-electron/**/*",
            "dist/**/*",
            "build/**/*"
        ],
        "directories": {
            "output": "release"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true,
            "include": "build/installer.nsh"
        },
        "win": {
            "target": "nsis",
            "icon": "build/DinkyApp.ico"
        },
        "fileAssociations": [
            {
                "ext": "dinkproj",
                "name": "Dinky Project",
                "role": "Editor"
            },
            {
                "ext": "ink",
                "name": "Ink File",
                "role": "Editor"
            }
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "inkjs": "^2.3.2",
        "monaco-editor": "^0.50.0",
        "nspell": "^2.1.5"
    },
    "devDependencies": {
        "check-node-version": "^4.2.1",
        "electron": "^40.0.0",
        "electron-builder": "^26.4.0",
        "vite": "^7.3.1",
        "vite-plugin-electron": "^0.28.0",
        "vite-plugin-electron-renderer": "^0.14.5"
    }
}